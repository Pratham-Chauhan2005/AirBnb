<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Signup For WanderLust</h1>
    <!-- UserName -->
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" placeholder="Enter a Username" required id="username" class="form-control">
                <div class="invalid-feedback">Look's Good!</div>
                </div>

        
    <!-- Email -->
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" name="email" placeholder="Enter Your email" required id="email" class="form-control">
        </div>

    <!-- PassWord -->
    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" name="password" placeholder="Enter a Secure Password" required id="PassWord" class="form-control">
    </div>
    <button class="btn btn-dark">SignUp</button>
</form>
</div>

</div>