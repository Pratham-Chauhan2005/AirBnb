<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <br><br>
    <h3>Create New Entry</h3>
    <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <br>
        <!-- Title -->
        <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" name="listing[title]" placeholder="Add a catchy title" required id="title" class="form-control">
        <div class="invalid-feedback">Please enter the valid Title</div>
        </div>

        <!-- Description -->
        <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" required class="form-control" id="description"></textarea>
        <div class="invalid-feedback">Please enter the valid Description</div>
        </div>
        
        <!-- Image -->
        <div class="mb-3">
        <label for="image" class="form-label">Upload Image</label>
        <input type="file" required name="listing[image]" class="form-control" id="image">
        </div>

        <div class="row">
            <!-- Price -->
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input type="number" required name="listing[price]" placeholder="1200" class="form-control" id="price">
            <div class="invalid-feedback">Please enter the price</div>
            </div>

            <!-- Country -->
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input type="text" required name="listing[country]" placeholder="India" class="form-control" id="country">
            <div class="invalid-feedback">Please enter the Country Name</div>
            </div>
        </div>
        
        <!-- Location -->
        <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input type="text" required name="listing[location]" placeholder="Indore,Madhya Pradesh" class="form-control" id="location">
        <div class="invalid-feedback">Please enter the Location</div>
        </div>
        
        <button class="btn btn-dark add-btn mt-3">Add</button>
        
    </form>
    </div>
</div>
</body>
